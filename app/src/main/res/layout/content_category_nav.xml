<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".category.CategoryNav"
    tools:showIn="@layout/app_bar_category_nav">


    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".category.CategoryActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#e7ecfa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_category_title_nav"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:background="@drawable/banner"
                android:text="Services"
                android:textColor="#dbe1fa"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:padding="10dp"/>



            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_category_nav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>