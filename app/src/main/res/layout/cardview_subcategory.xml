<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#e7ecfa"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#ffffff"
            app:cardElevation="10dp"
            app:cardMaxElevation="5dp"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_subcategory_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1c47f2"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textColor="#e7e7ff"
                    android:textSize="30dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/iv_subcategory"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#ffffff"
                    android:paddingBottom="2dp"
                    android:layout_below="@id/tv_subcategory_name"
                    app:srcCompat="@drawable/handylogo"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/tv_subcategory_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_subcategory"
                    android:layout_marginTop="5dp"
                    android:background="#1c47f2"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>