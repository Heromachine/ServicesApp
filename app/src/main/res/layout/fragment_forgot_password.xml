<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.ForgotPasswordFragment"
    android:background="#033045"
    android:orientation="vertical"
    android:layout_marginTop="10dp">


    <TextView
        android:id="@+id/tv_fpw_title"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:text="Reset My Password"
        android:textAlignment="center"
        android:textColor="#f9f0f0"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="Please Enter Password. \n Check your email and click the link provided"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="#FFF"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="25sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp">

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#2440a3"
        android:text="Submit"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:padding="15dp"/>
    </android.support.v7.widget.CardView>

</LinearLayout>